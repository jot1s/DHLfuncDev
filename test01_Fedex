def CheckInfo_API(trackingNumber, x, y):
    print("trackingNumber: ", trackingNumber  , "Row: " ,x , "Column: " ,y)
    
    

def track_package(tracking_number):
    
    access_token = "l7bc91508d5c6d49319ecc40c33a08e4ab"
    
    url = "/track/v1/trackingnumbers"
    
    payload = {
        "trackingNumber": tracking_number
    }
    
    headers = {
        'Content-Type': "application/json",
        'X-locale': "en_US",
        'Authorization': "Bearer " + access_token
    }
    
    # Establish connection
    connection = http.client.HTTPSConnection("apis-sandbox.fedex.com")
    
    # Send request
    connection.request("POST", url, json.dumps(payload), headers)
    
   
    # Get response
    response = connection.getresponse()
    print(response.status)
    print(response.reason)
    if response.status == 200:
        data = response.read()
        connection.close()
        return json.loads(data.decode("utf-8"))
    else:
        connection.close()
        return {"error": "Failed to track package. Status code: {}".format(response.status)}


